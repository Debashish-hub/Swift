// Arrays, Dictionaries, and Sets

// 1. Arrays
// Arrays store ordered lists of values.

// Creating an array
var fruits = ["Apple", "Banana", "Orange"]

// Accessing items
print(fruits[0]) // Apple

// Adding items
fruits.append("Mango")

// Removing items
fruits.remove(at: 1) // removes Banana

// Updating items
fruits[0] = "Grapes"

// Looping through array
print("______")
for fruit in fruits {
    print(fruit)
}

// Dictionaries
// Dictionaries store key–value pairs.

// Creating a dictionary
var ages = ["Alice": 25, "Bob": 30]

// Accessing values
print(ages["Bob"] ?? 0) // 30

// Adding a new key-value
ages["Charlie"] = 28

// Updating a value
ages["Alice"] = 26

// Removing a key-value
ages.removeValue(forKey: "Bob")


// Looping through dictionary
for (name, age) in ages {
    print("\(name) is \(age) years old")
}

// Sets
// Sets store unique, unordered values.

var numbers: Set = [1, 2, 3, 3, 2, 1]
print(numbers) // [1, 2, 3]

// Adding items
numbers.insert(4)

// Removing items
numbers.remove(2)

// Checking membership
print(numbers.contains(3)) // true

// Looping through a set
for number in numbers {
    print(number)
}

// Set operations
let setA: Set = [1, 2, 3]
let setB: Set = [3, 4, 5]

print(setA.union(setB))        // [1, 2, 3, 4, 5]
print(setA.intersection(setB)) // [3]


// Can you think of a real-life situation where duplicates are a problem?
// That’s where Sets save the day
